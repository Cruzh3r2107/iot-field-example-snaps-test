#!/bin/bash
# Configure hook - runs when snap configuration changes

LOG_FILE="$SNAP_COMMON/hooks.log"

echo "$(date): === CONFIGURE HOOK ===" >> "$LOG_FILE"

# Log all current configuration
echo "$(date): Configuration values:" >> "$LOG_FILE"
echo "  pre-refresh-fail: $(snapctl get pre-refresh-fail)" >> "$LOG_FILE"
echo "  post-refresh-fail: $(snapctl get post-refresh-fail)" >> "$LOG_FILE"
echo "  service-fail: $(snapctl get service-fail)" >> "$LOG_FILE"
echo "  health-fail: $(snapctl get health-fail)" >> "$LOG_FILE"

exit 0
